<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="../../css/manager.css" />
    <title>Manager</title>
</head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-white" id="sidebar-wrapper">

            <div class="list-group list-group-flush my-3">
                <a href="/manager" class="list-group-item list-group-item-action bg-transparent second-text active"><i
                        class="fas fa-tachometer-alt me-2"></i>Sản phẩm</a>
                <a href="/managerUser"
                    class="list-group-item list-group-item-action bg-transparent second-text fw-bold"><i
                        class="fas fa-project-diagram me-2"></i>Tài khoản</a>
                <a href="/info"
                    class="list-group-item list-group-item-action bg-transparent second-text fw-bold"><i
                        class="fas fa-bookmark"></i> Thông tin cá nhân</a>

                <a href="/" class="list-group-item list-group-item-action bg-transparent text-danger fw-bold"><i
                        class="fas fa-power-off me-2"></i>Đăng xuất</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-align-left primary-text fs-4 me-3" id="menu-toggle"></i>
                    <h2 class="fs-2 m-0">Sản phẩm</h2>
                </div>

            </nav>
            <div class="container-fluid px-4">
                <a href="/addproduct"><button type="button" class="btn btn-primary">Thêm mới sản phẩm</button></a>

            </div>


            <div class="container-fluid px-4">


                <div class="row my-5">
                    <h3 class="fs-4 mb-3">Danh sách sản phẩm</h3>
                    <div class="col">
                        <table class="table bg-white rounded shadow-sm  table-hover">
                            <thead>
                                <th>STT</th>
                                <th>Tên</th>
                                <th>Giá</th>
                                <th>Mô tả</th>
                                <th>Quản trị</th>
                            </thead>
                            <tbody>

                                {{#each products}}

                                <tr>
                                    <td>
                                        <span class="stt"></span>

                                        <script>
                                            var stt = {{@index}} + 1;
                                            document.getElementsByClassName("stt")[{{ @index }}].innerHTML = stt;
                                        </script>

                                    </td>
                                    <td>{{this.name}}</td>
                                    <td>{{this.price}}</td>
                                    <td>{{this.desc}}</td>
                                    <td>
                                        <a href="/editproduct/{{this._id}}" class="btn btn-primary">Sửa</a>
                                        <a href="/deleteproduct/{{this._id}}" onclick="return confirm('Are you sure?')"
                                            class="btn btn-danger">Xóa</a>
                                    </td>
                                </tr>
                                {{else}}
                                Sorry, nobody is here.
                                {{/each}}

                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        var el = document.getElementById("wrapper");
        var toggleButton = document.getElementById("menu-toggle");

        toggleButton.onclick = function () {
            el.classList.toggle("toggled");
        };
    </script>
</body>

</html>